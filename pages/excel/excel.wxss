.echart_panel{
  width: 100%;
  height: 500rpx;
}
.navTop{
  height: 420rpx;
  width: 100%;
  background: rgb(101 232 147);
  border-radius: 0 0 30rpx 30rpx;
  position: relative;
}
.deviceInfo{
  width: 700rpx;
  height: 200rpx;
  background-color: #fff;
  box-shadow: 0px 6rpx 20rpx rgba(211, 231, 251, 0.72);
  position: absolute;
  bottom:-100rpx;
  left: 50%;
  transform: translateX(-50%);
  margin: 0 auto;
  border-radius: 20rpx;
  font-weight: 500;
  padding: 25rpx;
  box-sizing: border-box;
}
.set-img{
  width: 50rpx;
  height: 50rpx;
  margin:25rpx 0 0rpx 20rpx;
}
.temperature{
  font-size: 93rpx;
  color: #fff;
  font-weight: 600;
}
.temperature-box{
  text-align: center;
}
.icon-box{
  padding: 155rpx 30rpx 0rpx 0;
  display: flex;
  justify-content: flex-end;
  position: relative;
  bottom: -10rpx;
}
.down-img{
  width: 45rpx;
  height: 45rpx;
}
.del-img{
  width: 53rpx;
  height: 53rpx;
  margin-right: 60rpx;
  position: relative;
  top: 6rpx;
}
.order_item {
  height: 84rpx;
  border-bottom: 1px solid#F1F1F1;
  line-height: 84rpx;
  padding: 0 20rpx;
  margin-top: 20rpx;
}

.order_item .name {
  width: 170rpx;
  color: #000000;
  font-size: 30rpx;
}

input::placeholder {
  color: #C8C8C8;
  font-size: 25rpx;
}

.order_item .select_txt {
  color: #727272;
  font-size: 30rpx;
}
.order_item .place_txt{
  color: #C8C8C8;
  font-size: 30rpx;
}
.edit-img{
  width: 35rpx;
  height: 35rpx;
  margin-left: 20rpx;
}