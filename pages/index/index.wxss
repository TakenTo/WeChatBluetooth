/**index.wxss**/
.main-container {
    height: 100vh;
}

.list-item {
    height: 57px;
    position: relative;
    overflow: hidden;
}

.list-item-hover {
    background-color: #e5e4e9;
}

.list-item-img {
    position: absolute;
    width: 36px;
    height: 36px;
    left: 20px;
    top: 10px;
}  
     
.list-item-name {
    position: absolute;
    left: 76px;
    right: 50px;
    top: 0px;
    bottom: 0px;
    line-height: 56px;
    font-size: 20px;
    overflow: hidden;
    text-overflow: ellipsis;
}

.list-item-rssi-img {
    position: absolute;
    width: 20px;
    height: 20px;
    right: 20px;
    top: 13px;
}

.list-item-rssi {
    position: absolute;
    width: 40px;
    height: 20px;
    right: 10px;
    top: 30px;
    font-size: 12px;
    font-weight: bold;
    display: flex;
    justify-content: center;
}

.list-item-line {
    position: absolute;
    height: 1px;
    width: 100vw;
    left: 20px;
    top: 56px;
    background-color: #c6c6c8;
}

.notice {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 10px;
    font-size: 13px;
    color: #909399;
}

.gap {
    height: 57px;
}

